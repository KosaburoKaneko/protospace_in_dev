.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@prototype.user) do
            = image_tag(@prototype.user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            by
            = link_to "#{@prototype.user.name}", user_path(@prototype.user)
            .degree
              = @prototype.user.position
  .row
    .col-md-9.image-box
      = image_tag(@prototype.set_main_thumbnail.large, class: 'img-responsive img-size-fix', style: "margin: 0 auto;")
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.captured_images.sub.each do |image|
          %li.list-group-item
            = image_tag(image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        - @tags.each do |tag|
          %li
            = link_to "#{tag.name}", "/tags/#{tag.id}"
            = link_to "削除", prototype_tag_path(@prototype, tag), method: :delete
  .comment
    = form_for @tag, url: prototype_tags_path(@prototype, @tag), method: :post do |f|
      -# - if @prototype.errors.any?
      -#   #error_explanation.alert.alert-danger
      -#     %ul
      -#       - @prototype.errors.full_messages.each do |message|
      -#         %li= message
      %input{name: "tag[prototype_ids][]", type: "hidden", value: "#{@prototype.id}"}
      = f.text_area :name, placeholder: "タグ書いてね！"
      = f.submit "Submit"

    -# - @comments.each do |comment|
    -#   = comment.content
    -#   = link_to "編集", edit_prototype_comment_path(@prototype, comment)
    -#   = link_to "削除", prototype_comment_path(@prototype, comment) , method: :delete


  .comment
    = form_for [@prototype, @comment] do |f|
      = f.text_area :content, placeholder: "コメント書いてね！"
      = f.submit "Submit"
    - @comments.each do |comment|
      = comment.content
      = link_to "編集", edit_prototype_comment_path(@prototype, comment)
      = link_to "削除", prototype_comment_path(@prototype, comment) , method: :delete
